<UserControl
    x:Class="UnoWasm.kahua.host.uno.ui.pdf.PdfPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoWasm.kahua.host.uno.ui.pdf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        Background="Gray"
        BorderBrush="Black"
        BorderThickness="1">

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="42"
            Foreground="White"
            Text="{x:Bind ViewModel.PageNumber, Mode=OneWay}" />

    </Grid>
</UserControl>
