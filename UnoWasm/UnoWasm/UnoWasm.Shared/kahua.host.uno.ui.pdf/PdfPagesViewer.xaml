<UserControl
    x:Class="UnoWasm.kahua.host.uno.ui.pdf.PdfPagesViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoWasm.kahua.host.uno.ui.pdf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <ScrollViewer
        x:Name="ViewPortScroller"
        HorizontalScrollBarVisibility="Visible"
        VerticalScrollBarVisibility="Visible">
        <Grid
            x:Name="ViewPort"
            Width="{x:Bind PdfDocument.Width, Mode=OneWay}"
            Height="{x:Bind PdfDocument.Height, Mode=OneWay}">
            <Canvas x:Name="PagesCanvas" />
        </Grid>
    </ScrollViewer>
</UserControl>
