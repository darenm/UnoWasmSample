<Page
    x:Class="UnoWasm.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoWasm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pdf="using:UnoWasm.kahua.host.uno.ui.pdf"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <pdf:PdfPagesViewer PdfDocument="{x:Bind ViewModel, Mode=OneWay}" />
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Slider
                Width="100"
                Margin="24"
                Header="Zoom Level"
                Maximum="10"
                Minimum="0.1"
                StepFrequency="0.1"
                TickPlacement="BottomRight"
                Value="{x:Bind ViewModel.Zoom, Mode=TwoWay}" />
            <StackPanel Orientation="Horizontal">
                <Button Click="{x:Bind PrevPage}">
                    <SymbolIcon Symbol="Upload" />
                </Button>
                <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.DisplayPageNumber, Mode=OneWay}" />
                <Button Click="{x:Bind NextPage}">
                    <SymbolIcon Symbol="Download" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
